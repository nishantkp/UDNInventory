<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryWhiteColor"
    android:orientation="horizontal"
    android:paddingRight="@dimen/list_item_padding_right">

    <Button
        android:id="@+id/list_item_item_decrease_quantity_button"
        style="@style/catalog_activity_button_style"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
        android:drawableTint="@color/colorAccent"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_item_name"
            style="@style/catalog_activity_product_name"
            android:paddingBottom="@dimen/list_item_item_name_padding"
            android:paddingTop="@dimen/list_item_item_name_padding"
            tools:text="Addidas Collection" />

        <TextView
            android:id="@+id/list_item_item_price"
            style="@style/catalog_activity_product_price"
            tools:text="$259.99" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/list_item_category_margin"
        android:background="@drawable/catagory_text_background"
        android:padding="@dimen/list_item_category_padding"
        android:fontFamily="sans-serif"
        android:text="Stationary"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/primaryWhiteColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_item_quantity"
        style="@style/catalog_activity_product_quantity"
        tools:text="155" />

    <ImageView
        android:layout_width="@dimen/list_item_icon_height"
        android:layout_height="@dimen/list_item_icon_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_item_icon_margin_left"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:tint="@color/colorAccent" />
</LinearLayout>

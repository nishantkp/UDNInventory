<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Editor Activity theme-->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryEditor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkEditor</item>
        <item name="colorAccent">@color/colorAccentEditor</item>
    </style>

    <!-- Login screen theme -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/loginColorPrimary</item>
        <item name="colorPrimaryDark">@color/loginColorPrimaryDark</item>
        <item name="colorAccent">@color/loginColorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Login screen dialog theme -->
    <style name="LoginTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/loginColorAccent</item>
        <item name="android:textColorPrimary">@color/primaryWhiteColor</item>
        <item name="android:background">@color/loginColorPrimary</item>
    </style>

    <!-- Catalog activity button style-->
    <style name="catalog_activity_button_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/list_item_button_padding</item>
        <item name="android:layout_margin">@dimen/list_item_button_margin</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- Catalog activity Product name style-->
    <style name="catalog_activity_product_name">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Catalog activity Product price style-->
    <style name="catalog_activity_product_price">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Catalog activity product quantity style-->
    <style name="catalog_activity_product_quantity">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!-- <item name="android:layout_marginRight">12dp</item>-->
    </style>

    <!-- Editor activity section divider style-->
    <style name="editor_activity_section_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/editor_section_divider_margin_top</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">@dimen/editor_section_divider_padding_top</item>
        <item name="android:paddingBottom">@dimen/editor_section_divider_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/editor_section_divider_padding_left</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/categoryTitle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Editor activity attributes name style-->
    <style name="editor_activity_attributes_text_style">
        <item name="android:layout_width">@dimen/editor_attributes_name_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Editor activity attributes EditText view style-->
    <style name="editor_activity_edit_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Editor activity price attribute EditText view style-->
    <style name="editor_activity_price_edit_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Editor activity quantity attributes EditText view style-->
    <style name="editor_activity_quantity_edit_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Editor activity quantity decrease and increase button style-->
    <style name="editor_activity_quantity_modification_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/editor_quantity_modification_button_margin</item>
        <item name="android:layout_marginRight">@dimen/editor_quantity_modification_button_margin</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/editor_quantity_modification_button_padding</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Editor activity delete item button style -->
    <style name="editor_activity_delete_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/editor_delete_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/editor_delete_button_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/editor_delete_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/editor_delete_button_padding_left_right</item>
        <item name="android:paddingTop">@dimen/editor_delete_button_padding_top_bottom</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Editor activity place order button style -->
    <style name="editor_activity_place_order_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/editor_place_order_button_margin</item>
        <item name="android:layout_marginLeft">@dimen/editor_place_order_button_margin</item>
        <item name="android:layout_marginTop">@dimen/editor_place_order_button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/editor_place_order_button_padding</item>
        <item name="android:paddingLeft">@dimen/editor_place_order_button_padding</item>
        <item name="android:paddingBottom">@dimen/editor_place_order_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/categoryTitle</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Editor activity new order quantity editText view style -->
    <style name="editor_activity_new_order_editText">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border_editor_activity_place_order</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/editor_new_order_edit_text_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
